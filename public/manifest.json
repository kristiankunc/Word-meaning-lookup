{
    "name": "Word definition",
    "description": "Word definition",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "<all_urls>",
        "activeTab"
    ],
    "icons": {
        "48": "icons/menu_book_48.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    
    "browser_action": {
        "default_icon": "icons/menu_book_48.png",
        "default_title": "Word definition",
        "default_popup": "popup/index.html"
    }
}